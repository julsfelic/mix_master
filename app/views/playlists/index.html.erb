<h1>All Playlists</h1>

<% if @playlists.empty? %>
  <div class="error">
    <h2>There are no playlists.</h2>
  </div>
<% else %>
  <ul>
    <% @playlists.each do |playlist| %>
      <li><%= link_to playlist.name, playlist %></li>
    <% end %>
  </ul>
<% end %>

<%= link_to "New playlist", new_playlist_path %>
